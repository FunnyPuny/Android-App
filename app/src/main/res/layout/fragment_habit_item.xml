<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppBottomSheetDialogTheme"
    tools:context=".presentation.HabitItemFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add habit"
        android:layout_marginTop="34dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto"
        android:lineHeight="20sp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lineHeight="24sp"
        tools:targetApi="p"
        android:layout_marginTop="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Habit's name"
            android:fontFamily="@font/roboto"
            android:textColor="@color/grey"
            android:textSize="17sp"
            android:lineHeight="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:inputType="textCapWords"
            android:background="@drawable/ic_edit_text_corner"
            tools:targetApi="p" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_reminder_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder note"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lineHeight="24sp"
        tools:targetApi="p"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_reminder_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_reminder_note"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Note"
        android:fontFamily="@font/roboto"
        android:textColor="@color/grey"
        android:textSize="17sp"
        android:lineHeight="20sp"
        android:letterSpacing="-0.02"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="textCapWords"
        android:background="@drawable/ic_edit_text_corner"
        tools:targetApi="p" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frequence"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lineHeight="24sp"
        tools:targetApi="p"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/item_frequence"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_reminder_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder timer"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lineHeight="24sp"
        tools:targetApi="p"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_hh"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:inputType="time"
            android:hint="hh"
            android:gravity="center"
            android:background="@drawable/ic_edit_text_corner"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/grey"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp">

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@color/grey"
                android:layout_marginBottom="12dp"/>

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@color/grey"/>

        </LinearLayout>

        <EditText
            android:id="@+id/et_mm"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:inputType="time"
            android:fontFamily="@font/roboto"
            android:hint="mm"
            android:gravity="center"
            android:background="@drawable/ic_edit_text_corner"
            android:textColor="@color/grey"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/grey_light"
        android:text="Add"
        android:textColor="@color/grey_dark"/>


</LinearLayout>
